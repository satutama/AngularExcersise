{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "printWidth": 120,
  "tabWidth": 2,
  "trailingComma": "es5",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 4,
        "singleQuote": true
      }
    },
    {
      "files": "*.js",
      "options": {
        "tabWidth": 4,
        "singleQuote": true
      }
    }
  ]
}
